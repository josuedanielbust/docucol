{
  "preset": "@shelf/jest-mongodb",
  "testEnvironment": "node",
  "testMatch": [
    "**/test/**/*.e2e-spec.ts"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "coverageDirectory": "./coverage",
  "collectCoverageFrom": [
    "src/**/*.{ts,js}",
    "!src/**/*.module.{ts,js}",
    "!src/main.ts"
  ],
  "globalSetup": "./test/setup.ts",
  "globalTeardown": "./test/teardown.ts",
  "setupFilesAfterEnv": [
    "./test/setupAfterEnv.ts"
  ]
}